<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center|end"
        android:padding="10dp"
        android:hint="0"
        android:maxLength="15"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextonPrimary"
        android:textColorHint="@color/colorTextonSecondary"
        android:id="@+id/input"
        android:textSize="50sp"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|end"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextonPrimary"
        android:textColorHint="@color/colorTextonSecondary"
        android:id="@+id/sign"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:background="@color/colorSecondaryLite"
        android:orientation="horizontal">
        
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_log"
            android:text="log"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_ln"
            android:text="ln"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_power"
            android:text="xⁿ"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_sqrt"
            android:text="√"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_fact"
            android:text="!"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="5"
        android:background="@color/colorSecondaryLite"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_sin"
            android:text="sin"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="cos"
            android:onClick="btnClick_cos"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="tan"
            android:onClick="btnClick_tan"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_7"
            android:background="@drawable/btn_backgroung"
            android:text="7"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_8"
            android:background="@drawable/btn_backgroung"
            android:text="8"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_9"
            android:background="@drawable/btn_backgroung"
            android:text="9"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_add"
            android:background="@drawable/btn_backgroung"
            android:text="+"
            android:textColor="@color/colorSecondaryLite"
            android:textSize="30sp"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btnClick_delete"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_baseline_backspace_24"
            android:background="@drawable/btn_backgroung"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_4"
            android:background="@drawable/btn_backgroung"
            android:text="4"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_5"
            android:background="@drawable/btn_backgroung"
            android:text="5"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_6"
            android:background="@drawable/btn_backgroung"
            android:text="6"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_subtract"
            android:background="@drawable/btn_backgroung"
            android:text="-"
            android:textColor="@color/colorSecondaryLite"
            android:textSize="30sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_backgroung"
            android:onClick="btnClick_clear"
            android:text="c"
            android:textColor="@color/colorSecondaryLite"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="btnClick_1"
                    android:background="@drawable/btn_backgroung"
                    android:text="1"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="btnClick_2"
                    android:background="@drawable/btn_backgroung"
                    android:text="2"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="btnClick_3"
                    android:background="@drawable/btn_backgroung"
                    android:text="3"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="btnClick_multiply"
                    android:background="@drawable/btn_backgroung"
                    android:text="*"
                    android:textColor="@color/colorSecondaryLite"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="btnClick_0"
                    android:background="@drawable/btn_backgroung"
                    android:text="0"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_backgroung"
                    android:text="."
                    android:onClick="btnClick_dot"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="btnClick_divide"
                    android:background="@drawable/btn_backgroung"
                    android:text="/"
                    android:textColor="@color/colorSecondaryLite"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="btnClick_equal"
                android:background="@drawable/btn_backgroung"
                android:text="="
                android:textColor="@color/colorTextonPrimary"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>